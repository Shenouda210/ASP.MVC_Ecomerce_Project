@model IEnumerable<project.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="col-lg-12">
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info " })
    </p>
    <table class="table table-bordered table-hover  glyphicon-align-justify " style="text-align:center">
        <tr class="active">
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="~/Content/img/@item.Picture" width="100px" height="auto"/>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID },new {@class="btn btn-success "}) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
