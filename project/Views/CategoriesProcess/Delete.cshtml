@model project.Models.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="col-lg-12">
    <h4>Category</h4>
    <div class="col-lg-12">
        <div class="card col-lg-4" style="text-align:center ;border:1px solid black">
            <img class="card-img-top" src="~/Content/img/@Model.Picture" width="300px" height="auto" alt="">
            <div class="card-body">
                <h5 class="card-title" style="border-top:1px solid black;padding-top:10px">Category Name: @Model.CategoryName</h5>
                <p class="card-text" style="border-top:1px solid black;padding-top:10px">Description: @Model.Description</p>
            </div>
            <div class="card-footer" style="border-top:1px solid black;padding-top:10px">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
                    </div>
                }
            </div>
        </div>
    </div>

   
</div>
